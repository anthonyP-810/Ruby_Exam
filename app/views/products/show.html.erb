<div>
    <h2>Hi <%= @user.first_name %></h2>
    <div id="header">
      <a href="/dashboard/
        <%= @user.id %>">Go to Dashboard
      </a>
      <a href="/session/<%= @user.id %>" data-method="delete">Logout
      </a>
    </div>
    <div>
        <h3>All Products</h3>
        <table>
            <thead>
                <tr>
                    <td>Product</td>
                    <td>Seller</td>
                    <td>Date Posted</td>
                    <td>Amount</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
              <% @products.each do |p| %>
                <tr>
                    <td><%= p.name %></td>
                    <td>
                      <%= p.user.first_name %> <%= p.user.last_name %>
                      </td>
                    <td>
                      <%= p.date_posted %>
                    </td>
                    <td>
                      <%= p.amount %>
                    </td>
                    <td><a href="/product/<%= p.id %>/buy" data-method="patch">Buy</a></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>